{
  "$schema": "https://turbo.build/schema.json",
  "globalDotEnv": [".env"],
  "pipeline": {
    "build": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        "dist/**",
        ".next/**",
        "!.next/cache/**"
      ],
      "dotEnv": [".env.production.local", ".env.local", ".env.production", ".env"],
      "env": [
        "JWT_SECRET",
        "NEXT_PUBLIC_TITLE",
        "NEXT_PUBLIC_WECHAT_OA",
        "REDIS_URL",
        "REDIS_TOKEN",
        "OPENAI_ENDPOINT",
        "OPENAI_API_KEY",
        "BING_COOKIE",
        "DOMAIN",
        "CALLBACK_DOMAIN",
        "XUNHU_PAY_APPID",
        "XUNHU_PAY_APPSECRET",
        "NEXT_PUBLIC_EMAIL_SERVICE",
        "MAILGUN_EMAIL_DOMAIN",
        "MAILGUN_EMAIL_API_KEY",
        "ELASTICE_EMAIL_API_KEY",
        "ELASTICE_EMAIL_SENDER",
        "SMS_ACCESS_KEY_ID",
        "TEXT_SECURITY",
        "TENCENT_SECRETID",
        "TENCENT_SECRETKEY",
        "BAIDU_APIKEY",
        "BAIDU_SECRETKEY",
        "EDGE_CONFIG",
        "EDU_ENDPOINT",
        "USE_HACK"
      ]
    },
    "test": {
      "dependsOn": [
        "^test"
      ],
      "dotEnv": [".env.test.local", ".env.test", ".env"]
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "dotEnv": [".env.development.local", ".env.local", ".env.development", ".env"]
    }
  }
}
